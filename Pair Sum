You have been given an integer array/list(ARR) and a number 'num'. Find and return the total number of pairs in the array/list which sum to 'num'.

1
9
1 3 6 2 5 4 3 2 4
7

o/p
7
//Tc = O(n)
#include <bits/stdc++.h>
using namespace std;
int pairSum(int *arr, int n, int num)
{
	//Write your code here
    int count = 0;
    // for(int i = 0; i<n; i++){
    //     for(int j = i+1; j<n; j++){
    //         if(arr[i]+arr[j] == num){
    //          count++;   
    //         }
    //     }
    // }
    sort(arr,arr+n);
    int i = 0;
    int j = n-1;
    while(i <j){
        
        if(arr[i]+arr[j] == num){
            if(arr[i] == arr[j]){
                int n = j-i;
                int ct = (n * (n+1))/2;
                count+=ct;
                return count;
            }
            if(arr[i] == arr[i+1] || arr[j] == arr[j-1]){
                int c = 1;
                while(arr[i] == arr[i+1]){
                    c++;
                    i++;
                }
                int l = 1;
                while(arr[j] == arr[j-1]){
                    l++;
                    j--;
                }
            count +=c *l;
           }
           else{
             count++; 
             }
          
            i++;
            j--;
    }
        else if((arr[i]+arr[j])<num){
            i++;
        }
        else{
            j--;
        }
    }
    return count;
}
