Node *deleteNodeRec(Node *head, int pos) {
	//Write your code here
    if(head == NULL){
        return head;
    }
    if(pos == 0){
        Node *temp = head;
        head = head->next;
        delete temp;
        return head;
    }
    Node *x = deleteNodeRec(head->next,pos-1);
    head->next = x;
    return head;
    
}
